@using NewsBlogWebPage.Areas.Admin.Models
@model ArticleCreateEditVM
@{
    ViewBag.Title = "ویرایش مقاله";
}
<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-12">
        <label asp-for="Title" class="form-label">عنوان</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-12 col-md-6">
        <label asp-for="CategoryId" class="form-label">دسته بندی</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="col-12 col-md-6">
        <label asp-for="WriterId" class="form-label">نویسنده</label>
        <select asp-for="WriterId" class="form-select" asp-items="@(new SelectList(ViewBag.Writers, "Value", "Text"))"></select>
        <span asp-validation-for="WriterId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Image" class="form-label">تغییر تصویر (اختیاری)</label>
        <input asp-for="Image" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ExistingImageName))
        {
            <div class="mt-2">
                <img src="~/img/@Model.ExistingImageName" class="img-thumb rounded" alt="تصویر فعلی" />
            </div>
        }
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Text" class="form-label">متن</label>
        <textarea asp-for="Text" id="ckEdiotr4 class="form-control" rows="8"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
        <a asp-action="Index" class="btn btn-secondary">انصراف</a>
    </div>
</form>



<script src="/ckeditor4/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('ckEdiotr4' ,
        {
            customCunfig: '/ckeditor4/ckeditor/config.js'
        }
    );
</script>