@using Core.Entities
@model List<Article>
@{
    ViewBag.Title = "مقالات";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>مقالات</h3>
    <a class="btn btn-success" asp-action="Create">ایجاد مقاله جدید</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>عنوان</th>
            <th>دسته</th>
            <th>نویسنده</th>
            <th>تصویر</th>
            <th>تاریخ</th>
            <th style="width:160px">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.Category?.Name</td>
                <td>@a.Writer?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(a.ImageName))
                    {
                        <img src="~/img/@a.ImageName" class="img-thumb rounded" />
                    }
                </td>
                <td>@a.DateCreated.ToLocalTime().ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@a.Id">نمایش</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@a.Id">ویرایش</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@a.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>